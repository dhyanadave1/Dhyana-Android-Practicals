<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TableLayoutActivity"
    android:background="@color/black">

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
        <TextView
            android:id="@+id/tvEnterFeedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:padding="@dimen/_3sdp"
            android:text="@string/tvInstruction"
            android:textColor="@color/grey"
            android:textSize="@dimen/_28sdp" />
    </TableRow>

    <TableRow
        android:id="@+id/trName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:gravity="center">
            <EditText
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:id="@+id/etName"
                android:padding="@dimen/_12sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/tvName"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:importantForAutofill="no"
                android:background="@drawable/textview" />
    </TableRow>

    <TableRow
        android:id="@+id/trEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:gravity="center">
            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/etEmail"
                android:inputType="textEmailAddress"
                android:background="@drawable/textview"
                android:padding="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp" />
    </TableRow>

    <TableRow
        android:id="@+id/trFeedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:gravity="center">
            <EditText
                android:id="@+id/etFeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_text_details"
                android:imeOptions="actionDone"
                android:inputType="textMultiLine"
                android:paddingLeft="@dimen/_10sdp"
                android:lines="8"
                android:minLines="5"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/textview"/>
    </TableRow>

    <TableRow
        android:id="@+id/trResponse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_6sdp"
                android:buttonTint="@color/white"
                android:text="@string/checkbox_text_response"
                android:textColor="@color/white"
                android:textSize="@dimen/_20sdp" />
    </TableRow>

    <TableRow
        android:id="@+id/trSubmitFeedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_6sdp">
            <Button
                android:id="@+id/btnFeedback"
                android:layout_width="@dimen/_300sdp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="@drawable/textview"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/button_text_send"
                android:textAllCaps="false"
                android:textSize="@dimen/_15sdp" />
    </TableRow>
</TableLayout>